extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Recuperar Contraseña
  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    p.pb-4 Ingresa tu correo electrónico y te enviaremos un mensaje para recuperar tu contraseña.
    .form-group.row
      label.col-md-3.col-form-label.font-weight-bold.text-right(for='email') Correo Electrónico
      .col-md-7
        input.form-control(type='email', name='email', id='email', placeholder='Correo Electrónico', autofocus, autocomplete='email', required)
    .form-group.offset-sm-3.col-md-7.pl-2
      button.btn.btn-primary(type='submit')
        i.fas.fa-key.fa-sm
        | Recuperar Contraseña
